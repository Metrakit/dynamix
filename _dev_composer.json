{
	"name": "dlepaux/dynamix",
	"description": "Based on the Laravel Framework, it is an awesome CMS for anyone !",
	"keywords": ["cms", "framework", "laravel", "dynamix"],
    "authors": [
        {
            "name": "David Lepaux",
            "email": "d.lepaux@gmail.com"
        },
  		{
            "name": "Jordane Jouffroy",
            "email": "contact@jordane.net"
        }
	],
	"license": "MIT",
	"repositories": [
        {
            "type": "package",
            "package": {
	            "name": "dynamix/dynamix-template-package",
	            "version": "dev-master",
	            "source": {
	                "url": "git@github.com:dlepaux/dynamix-template-package.git",
	                "type": "git",
	                "reference": "master"
	            },
	            "autoload": {
	                "psr-0" : {
	                    "Dynamix\\Template" : "src"
	                }
	            }
	        }
        }
    ],
	"require": {
		"laravel/framework": "4.2.*",
		"nesbot/Carbon": "*",
		"google/apiclient": "1.1.*@dev",
		"thujohn/analytics": "dev-master",
		"schickling/backup": "0.6.*",
		"dynamix/dynamix-template-package": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/models",
			"app/commands",
			"core/controllers",
			"core/libraries",
			"app/database/migrations",
			"app/database/seeds",
			"vendor/dynamix",
			"workbench"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
