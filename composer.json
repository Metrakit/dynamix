{
	"name": "dlepaux/dynamix",
	"description": "Based on the Laravel Framework, it is an awesome CMS for anyone !",
	"keywords": ["cms", "framework", "laravel", "dynamix"],
    "authors": [
        {
            "name": "David Lepaux",
            "email": "d.lepaux@gmail.com"
        },
  		{
            "name": "Jordane Jouffroy",
            "email": "contact@jordane.net"
        }
	],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
		"nesbot/Carbon": "*",
		"phpunit/phpunit": "4.5.*",
		"dynamix/core": "dev-master",
		"dynamix/i18n": "dev-master",
		"dynamix/pager": "1.*"
	},
	"autoload": {
		"classmap": [
			"app/models",
			"core/controllers",
			"core/libraries",
			"app/database/migrations",
			"app/database/seeds",
            "workbench",
            "theme"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"extra": {
        "installer-paths": {
            "theme/{$name}": ["type:laravel-library"]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
